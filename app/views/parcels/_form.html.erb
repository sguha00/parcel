<div class="row">
<div class="span3 offset1">
  <h4>About your parcel</h4>
</div>
  
</div>
<%= simple_form_for @parcel, :html => {:class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= f.input :address %>
  <%= f.input :description, :as => :text, :input_html => {
  :placeholder => "Tell travelers about comforts and amenities,
  closeness to sites and attractions, and basics like internet, cable,
  parking. Are you a great host? Tell them that too!", :rows => 5,
  :cols => 500 } %>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), parcels_path, :class => 'btn' %>
  </div>
<% end %>
