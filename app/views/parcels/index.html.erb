<%- model_class = Parcel -%>
<div class="row">
  <div class="span12">
    <div class="page-header">
      <h3>Turn idle backyards into fresh fruits and veggies</h3>
    </div>
  </div>
</div>
<div class="row">
  <div class="span4">
    <%= gmaps("map_options" => { "detect_location" => true,
                                 "center_on_user" => true,
                                 :auto_adjust => true, "zoom" => 6},
                                 "markers" => { "data" => @json }) %>
  </div>
  <div class="span8">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>20 parcels</th>
        </tr>
      </thead>
      <tbody>
        <% @parcels.each do |parcel| %>
        <tr>
          <td>
            <h3>
              <%= link_to parcel.title, parcel_path(parcel) %>
            </h3>
            <p>
              <%= parcel.created_at %>
            </p>
            <p>
              <%= parcel.description %>
            </p>
            <p>
              <%= parcel.address %>
            </p>
          </td>
          <td></td>
          <td>
            <%= button_to "Contact", new_parcel_path,
                :class => "btn btn-mini pull-right", :method => :get %>
          </td>
          <td></td>
          <td>
           <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_parcel_path(parcel), :class => 'btn btn-mini' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
            parcel_path(parcel),
            :method => :delete,
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
            :class => 'btn btn-mini btn-danger' %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>


  </div> <!-- span8 -->

</div>
